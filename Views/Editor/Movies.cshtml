@{
    ViewData["Title"] = "Actors Page";
}
@model List<Movie>

<div class="text-center">
    @if (Model.Count > 0)
    {
        <h1>Feature list</h1>
        <a class="btn btn-primary" href="@Url.Action("Create", "Movie")">Inserisci un nuovo film </a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titolo</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Durata</th>
                    <th scope="col">Visualizzazioni</th>
                    <th scope="col">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Durata</td>
                        <td>@item.VisualisationCount</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Update","Actor", new {id = item.Id})">Update</a>
                            <form asp-action="Delete" asp-controller="Actor" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>La tabella dei film e' vuota</h1>
        <a class="btn btn-primary" href="@Url.Action("Create", "Movie")">Inserisci un nuovo film </a>
    }
</div>