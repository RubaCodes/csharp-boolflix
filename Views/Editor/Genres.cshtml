@{
    ViewData["Title"] = "Genres Page";
}
@model List<Genre>

<div class="text-center">
    @if (Model.Count > 0)
    {
        <h1>Genre list</h1>
        <a class="btn btn-primary" href="@Url.Action("Create", "Genre")">Inserisci una nuovo genere</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Update","Genre", new {id = item.Id})">Update</a>
                            <form asp-action="Delete" asp-controller="Genre" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>La lista di generi e' vuota</h1>
        <a class="btn btn-primary" href="@Url.Action("Create", "Genre")">Inserisci una nuovo Genere</a>
    }
</div>